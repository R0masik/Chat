<div id="sign_in" class="modal fade in">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Заголовок модального окна -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title"> <%= label_tag t('Authorization')%></h4>
      </div>
      <!-- Основное содержимое модального окна -->
      <div class="modal-body">
    <%= form_for(User.new, url: session_path(:user),
                 html:{id: 'sign_in_user', :'data-type' => 'json'}, remote: true) do |f| %>
        <div class="field">
          <%= f.label t :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label t :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if Devise.mappings[:user].rememberable? -%>
            <div>
              <%= f.check_box  :remember_me %>
              <%= f.label t :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit t("Sign in"), :class => 'btn btn-primary margin-top' %>
        </div>
    <% end %>
  </div>
      <!-- Футер модального окна -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= label_tag t'Close' %></button>
      </div>
    </div>
  </div>
</div>